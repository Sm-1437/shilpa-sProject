<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >
    <androidx.cardview.widget.CardView
        android:outlineSpotShadowColor="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/white"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_gravity="left"
                android:id="@+id/image_view"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_view"
                android:text="AZITHROMYCIN-250MG"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_view"
                android:layout_below="@id/txt_name"
                android:text="INSTRUCTION:-"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/txt_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textAlignment="center"
                android:layout_toRightOf="@+id/txt_room"
                android:layout_below="@id/txt_name"
                android:text="TAKE 1 TABLET BY MOUTH 3 TIMES DAILY(SINGLE BUBBLE)"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/txt_roomno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
          <TextView
              android:id="@+id/diagnosis"
              android:layout_marginLeft="10dp"
              android:layout_toRightOf="@+id/image_view"
              android:textColor="@color/black"
              android:text="DIAGNOSIS:- PAIN 15652"
              android:layout_below="@+id/txt_roomno"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
        <TextView
              android:id="@+id/time"
              android:layout_marginLeft="10dp"
              android:layout_toRightOf="@+id/image_view"
              android:textColor="@color/black"
              android:text="LAST GIVEN:- 09/03/2020"
              android:layout_below="@+id/diagnosis"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>


            <ImageView
                android:layout_alignBottom="@+id/time"
                android:layout_marginRight="30dp"
                android:visibility="gone"
                android:id="@+id/tick"
                android:layout_alignParentRight="true"
                android:src="@drawable/tick"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>




</LinearLayout>