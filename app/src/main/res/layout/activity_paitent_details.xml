<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    android:background="@drawable/background"
    tools:context=".Activity.PaitentDetails">
   <LinearLayout
       android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:outlineSpotShadowColor="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/nurse_office"
                android:layout_marginTop="20dp"
                android:layout_gravity="left"
                android:id="@+id/image_view"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_view"
                android:text="DONOVON CORNNET"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_view"
                android:layout_below="@id/txt_name"
                android:text="Room:-"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/txt_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/txt_room"
                android:layout_below="@id/txt_name"
                android:text="11"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/txt_roomno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_view"
                android:layout_below="@id/txt_room"
                android:text="Allergiers :- NKA"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/allergies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_view"
                android:layout_below="@id/allergies"
                android:text="Diagnoses:- HIGH CHOLESTROL 71298,HYPERTENSION 30346"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/Diagonisis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_view"
                android:layout_below="@id/Diagonisis"
                android:text="Informational Orders:-"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:id="@+id/imformationalorders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_alignBottom="@+id/imformationalorders"
                android:layout_marginRight="30dp"
                android:visibility="gone"
                android:id="@+id/tick"
                android:layout_alignParentRight="true"
                android:src="@drawable/tick"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:drawablePadding="5dp"
                android:layout_marginRight="15dp"
                android:drawableLeft="@drawable/drug"
                android:layout_alignBottom="@+id/imformationalorders"
                android:backgroundTint="@color/white"
                android:background="@drawable/circle"
             android:layout_alignParentRight="true"
                android:text="9"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/medicens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<Button
    android:layout_gravity="center"
    android:id="@+id/btn_next"
    android:textColor="@color/black"
    android:text="Next"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>
